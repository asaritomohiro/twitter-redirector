{
    "manifest_version": 3,
    "name": "Twitter Redirector",
    "version": "1.0",
    "description": "Redirects twitter.com or x.com to twitter.com?mx=1",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "declarativeNetRequestFeedback"
    ],
    "host_permissions": [
        "*://twitter.com/*",
        "*://x.com/*"
    ],
    "icons": {
        "48": "icon.png",
        "128": "icon128.png"
    }
}