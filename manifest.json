{
    "manifest_version": 3,
    "name": "Block Twitter Redirector",
    "version": "1.0.0",
    "description": "twitter.comがx.comにリダイレクトされないようにします。",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
        "*://*.twitter.com/*",
        "*://*.x.com/*"
    ],
    "icons": {
        "48": "icon.png",
        "128": "icon128.png"
    }
}